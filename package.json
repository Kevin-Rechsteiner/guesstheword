{
  "name": "word_guesser",
  "version": "1.0.0",
  "description": "Real-time multiplayer word guessing game with WebSocket",
  "type": "module",
  "main": "server/src/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server": "node server/src/index.js",
    "server:dev": "nodemon server/src/index.js",
    "client:dev": "vite",
    "client:build": "vite build",
    "preview": "vite preview",
    "build": "npm run client:build",
    "start": "npm run server"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "private": true,
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "lucide-react": "^0.560.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "vite": "^5.0.8"
  }
}